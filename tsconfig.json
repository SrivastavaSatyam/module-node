{
    "compilerOptions": {
        "target": "es5", // Specify ECMAScript target version: "ES3" (default), "ES5", "ES2015", "ES2016", "ES2017", "ES2018", "ES2019", "ES2020", "ESNext"
        "module": "commonjs", // Specify module code generation: "none", "commonjs", "amd", "system", "umd", "es2015", "es2020"
        "moduleResolution": "node", // Specify module resolution strategy: "node" (default), "classic"
        "sourceMap": true, // Generates corresponding .map file
        "declaration": true, // Generates corresponding .d.ts file
        "emitDecoratorMetadata": true, // Generates a metadata.json file that allows to analyze the decorated classes on runtime.
        "experimentalDecorators": true, // Enables experimental support for ES7 decorators.
        "removeComments": false, // Do not emit comments to output
        "outDir": "./lib", // Specify name of directory to place output files.
        "strict":true

    },
    "include": ["src"],
    "exclude": ["node_modules","**/__test__/**"]
}